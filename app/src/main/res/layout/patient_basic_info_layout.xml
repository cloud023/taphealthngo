<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_patient_invite_status"
        android:gravity="center_horizontal"
        android:text="Care of Dr. Juan Dela Cruz"
        android:layout_width="match_parent"
        android:padding="18dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_patient_img"
        android:layout_below="@id/txt_patient_invite_status"
        android:src="@drawable/profile_patient_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Jayson Duran"
        android:textColor="@color/colorHeadline"
        android:textSize="@dimen/headline_text_size"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:id="@+id/txt_patient_name"
        android:layout_below="@+id/txt_patient_invite_status"
        android:layout_toRightOf="@+id/img_patient_img"
        android:layout_toEndOf="@+id/img_patient_img" />

    <TextView
        android:layout_width="wrap_content"
        android:text="16yrs Old"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_patient_name"
        android:fontFamily="sans-serif"
        android:layout_toRightOf="@+id/img_patient_img"
        android:layout_toEndOf="@+id/img_patient_img"
        android:id="@+id/txt_patient_age" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Male"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/txt_patient_age"
        android:layout_toRightOf="@+id/img_patient_img"
        android:layout_toEndOf="@+id/img_patient_img"
        android:id="@+id/txt_patient_gender" />

    <Button
        android:layout_width="wrap_content"
        android:text="Call Doctor"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_patient_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_patient_call_doctor" />

    <TextView
        android:id="@+id/txt_patient_birthdate"
        android:text="Birthdate: November 25, 1992"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_patient_call_doctor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_patient_sss_number"
        android:text="SSS #: 39485934"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_patient_birthdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_marital_status"
        android:text="Status : Single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_patient_sss_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_philhealth_number"
        android:text="Philhealth # : 39894734"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_marital_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_patient_address"
        android:text="Address : Blk 3 Lot 4 Centennial 2 San Pedro St. Pinalad Pasig City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_philhealth_number"
        android:layout_alignRight="@+id/btn_patient_call_doctor"
        android:layout_alignEnd="@+id/btn_patient_call_doctor" />

    <TextView
        android:id="@+id/txt_patient_hmo_affiliation"
        android:text="HMO: Medicard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_patient_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>