<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.conduit.taphealthngo.NFCActivity">

    <ImageView
        android:id="@+id/img_nfc_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="146dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:src="@drawable/bignfclogo"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorHeadline"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:text="TAP PATIENT CARD HERE"
        android:layout_marginTop="-38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_nfc_logo"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
