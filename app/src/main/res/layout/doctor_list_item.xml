<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_doctor_fragment_list_item_name"
        android:layout_width="wrap_content"
        android:text="Dr. Juan Tamad"
        android:padding="16dp"
        android:textSize="@dimen/subheader_text_size"
        android:textColor="@color/colorHeadline"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_doctor_fragment_item_call"
        android:text="Call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_doctor_fragment_list_item_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>