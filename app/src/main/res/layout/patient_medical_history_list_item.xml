<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/report"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/img_med_icon" />

    <TextView
        android:id="@+id/txt_medical_history_list_item_desc"
        android:text="Has asthma and allergic to crabs"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/subheader_text_size"
        android:textColor="@color/colorHeadline"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/img_med_icon"/>

</LinearLayout>